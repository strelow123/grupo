<script>
    function copyLink() {
        var copyText = document.getElementById("linkBox");
        copyText.select();
        copyText.setSelectionRange(0, 99999); // Para dispositivos m√≥veis
        document.execCommand("copy");
        alert("Link copiado: " + copyText.value);
    }
</script>

